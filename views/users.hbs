<div class="mt-3 text-center">
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Kullanıcı isimleri</th>
          <th>Kullanıcı yetkisi</th>
          <th>İşlemler</th>
        </tr>
      </thead>
      <tbody>

        {{#each users}}
          <tr>
            <td>{{username}}</td>
            <td>{{role}}</td>
            <td>
              <form method="post">
                <button class="btn btn-warning" type="submit" name="permission" value="{{_id}}" style="margin-right: 10px;">Yetki ver</button>
                <button class="btn btn-info" type="submit" name="edit" style="margin-right: 10px;">Düzenle</button>
                <button class="btn btn-danger" name="user_delete" value="{{_id}}" type="submit">Sil</button></td>
              </form>
          </tr>
        {{/each}}

      </tbody>
    </table>
  </div>

  <nav>
    <ul class="pagination justify-content-center mt-3">
      {{#each pages_number }}
        <li class="page-item"><a class="page-link" href="/users/{{ this }}">{{ this }}</a></li>
      {{/each}}
    </ul>
  </nav>

</div>